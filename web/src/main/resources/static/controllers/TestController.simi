import "./SimiSyncControllers.simi"

class TestController:
    !SimiSyncControllers.Route("/test", "POST")
    def testPost(request): return "FROM SIMI: " + request.body

    !SimiSyncControllers.Route("/test", "GET")
    def testGet(request): return "SIMI HEADERS: " + request.headers + "<br/><br/>" + request.query

    !SimiSyncControllers.Route("/test/$id", "GET")
    def testGetId(request): return [code = 201, body = "PATH: " + request.path.id]
end
